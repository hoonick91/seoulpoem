<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/background">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:overScrollMode="never"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!-- vertical 수직 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="5">


                <ImageButton
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:id="@+id/page_back"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding = "10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/path" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content" />


                <ImageButton
                    android:id="@+id/finish"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:padding="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/path_2"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical" />


            </LinearLayout>

            <TextView
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#80000000"
                android:text="태그를 선택하세요" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 태그 버튼 5개 있는 레이아웃1-->
                <LinearLayout
                    android:layout_marginTop="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="56dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="26dp"
                        android:id="@+id/tag1"
                        android:tag="1"
                        android:text="서울"
                        android:textSize="13sp"
                        android:textColor="#95989a"
                        android:background="@drawable/rectangle_path"/>

                    <Button
                        android:layout_width="56dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="7dp"
                        android:id="@+id/tag2"
                        android:tag="0"
                        android:text="홍대"
                        android:textSize="13sp"
                        android:textColor="#95989a"
                        android:background="@drawable/rectangle_path"/>

                    <Button
                        android:layout_width="56dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="7dp"
                        android:id="@+id/tag3"
                        android:tag="0"
                        android:text="강남"
                        android:textSize="13sp"
                        android:textColor="#95989a"
                        android:background="@drawable/rectangle_path"/>

                    <Button
                        android:layout_width="56dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="7dp"
                        android:id="@+id/tag4"
                        android:tag="0"
                        android:text="압구정"
                        android:textSize="13sp"
                        android:textColor="#95989a"
                        android:background="@drawable/rectangle_path"/>

                    <Button
                        android:layout_width="56dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="7dp"
                        android:id="@+id/tag5"
                        android:tag="0"
                        android:text="광화문"
                        android:textSize="13sp"
                        android:textColor="#95989a"
                        android:background="@drawable/rectangle_path"/>

                </LinearLayout>

                <!-- 태그 버튼 5개 있는 레이아웃2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <Button
                        android:layout_width="56dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="26dp"
                        android:id="@+id/tag6"
                        android:tag="0"
                        android:text="한강"
                        android:textSize="13sp"
                        android:textColor="#95989a"
                        android:background="@drawable/rectangle_path"/>

                    <Button
                        android:layout_width="56dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="7dp"
                        android:id="@+id/tag7"
                        android:tag="0"
                        android:text="종로"
                        android:textSize="13sp"
                        android:textColor="#95989a"
                        android:background="@drawable/rectangle_path"/>

                    <Button
                        android:layout_width="56dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="7dp"
                        android:id="@+id/tag8"
                        android:tag="0"
                        android:text="빌딩숲"
                        android:textSize="13sp"
                        android:textColor="#95989a"
                        android:background="@drawable/rectangle_path"/>

                    <Button
                        android:layout_width="56dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="7dp"
                        android:id="@+id/tag9"
                        android:tag="0"
                        android:text="이태원"
                        android:textSize="13sp"
                        android:textColor="#95989a"
                        android:background="@drawable/rectangle_path"/>

                    <Button
                        android:layout_width="56dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="7dp"
                        android:id="@+id/tag10"
                        android:tag="0"
                        android:text="거리"
                        android:textSize="13sp"
                        android:textColor="#95989a"
                        android:background="@drawable/rectangle_path"/>
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/write_title"
                android:layout_width="308dp"
                android:layout_height="45.5dp"
                android:layout_marginLeft="25dp"
                android:textCursorDrawable="@android:color/black"
                android:backgroundTint="#95989a"
                android:textSize="14sp"
                android:hint="제목을 입력하세요"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="12"/>

            <LinearLayout
                android:id="@+id/write_content_wrap"
                android:layout_width="match_parent"
                android:layout_height="256.5dp">

                <EditText
                    android:id="@+id/write_content"
                    android:layout_width="308dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:gravity="top"
                    android:textCursorDrawable="@android:color/black"
                    android:backgroundTint="#95989a"
                    android:hint="내용을 입력하세요"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#80000000"
                    android:layout_marginLeft="25dp"
                    android:text="배경을 선택하세요"/>

                <Button
                    android:id="@+id/paper1"
                    android:layout_marginLeft="15dp"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:tag="1"
                    android:background="@drawable/outline1"/>

                <Button
                    android:id="@+id/paper2"
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:tag="2"
                    android:background="@drawable/paper2_mini"/>

                <Button
                    android:id="@+id/paper3"
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:tag="3"
                    android:background="@drawable/paper3_mini"/>

                <Button
                    android:id="@+id/paper4"
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:tag="4"
                    android:background="@drawable/paper4_mini"/>

            </LinearLayout>

            <TextView
                android:id="@+id/select_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="#488ab4"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:id="@+id/write_tag"
                android:textCursorDrawable="@android:color/black"
                android:backgroundTint="#95989a"
                android:bufferType="spannable"
                android:textSize="14sp"
                android:hint="태그를 입력하세요"
                android:imeOptions="actionNext"
                android:inputType="text"/>

            <EditText
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@android:color/black"
                android:backgroundTint="#95989a"
                android:layout_marginLeft="25dp"
                android:id="@+id/write_detail"
                android:textSize="14sp"
                android:hint="기타 상세정보를 입력하세요"
                android:imeOptions="actionDone"
                android:inputType="text"/>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/keyboard_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="#e2e2e3" >

        <LinearLayout
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/font_button"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="#37474f"
                android:gravity="center_horizontal|center_vertical"
                android:text="폰트/사이즈"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="2dp"
                android:layout_height="28dp"
                android:src="@drawable/ui_divider_dark_1"/>

            <TextView
                android:id="@+id/effect_button"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="#37474f"
                android:gravity="center_horizontal|center_vertical"
                android:text="효과"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="2dp"
                android:layout_height="28dp"
                android:src="@drawable/ui_divider_dark_1"/>

            <TextView
                android:id="@+id/sort_button"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="#37474f"
                android:gravity="center_horizontal|center_vertical"
                android:text="정렬"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/font_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/back2"
                android:layout_marginLeft="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="12dp"
                    android:src="@drawable/path_8"/>

            </RelativeLayout>


            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center_horizontal|center_vertical"
                android:text="폰트/사이즈"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="2dp"
                android:layout_height="28dp"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ui_divider_dark_1"/>

            <Spinner
                android:id="@+id/size_spinner"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center_horizontal|center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/effect_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/back3"
                android:layout_marginLeft="10dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="12dp"
                    android:src="@drawable/path_8"/>

            </RelativeLayout>

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:text="효과"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="2dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ui_divider_dark_1"/>

            <Button
                android:id="@+id/bold"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/path_10"/>


            <Button
                android:id="@+id/italic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/path_9"/>


            <Button
                android:id="@+id/underline"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/path_11"/>


            <Spinner
                android:background="#e2e2e3"
                android:id="@+id/paint_spinner"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/sort_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/back1"
                android:layout_marginLeft="10dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="12dp"
                    android:src="@drawable/path_8"/>

            </RelativeLayout>

            <TextView
                android:layout_marginLeft="33dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="14sp"
                android:text="정렬"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="2dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ui_divider_dark_1"/>

            <Button
                android:id="@+id/text_left"
                android:layout_marginLeft="27dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/path_12"/>

            <Button
                android:id="@+id/text_center"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="30dp"
                android:background="@drawable/path_13"/>

            <Button
                android:id="@+id/text_right"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="30dp"
                android:background="@drawable/path_14"/>

            <Button
                android:id="@+id/text_default"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/path_15"/>



        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>