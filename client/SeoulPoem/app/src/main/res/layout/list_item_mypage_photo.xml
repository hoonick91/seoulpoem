<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:id="@+id/item_mypage_myphoto"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/white_hamburger"
        android:layout_alignBottom="@id/item_mypage_myphoto"
        android:layout_alignRight="@id/item_mypage_myphoto"
        android:id="@+id/item_mypage_hamburger"
        android:padding="10dp"
        android:visibility="invisible"/>

</RelativeLayout>
